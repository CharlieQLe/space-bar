{
    "compilerOptions": {
        "target": "es2015",
        "strict": true,
        "outDir": "./target",
        "lib": ["es2015", "dom"],
        "paths": {
            "@imports/*": ["./@types/Gjs/*"],
            "types": ["./src/types/types.d"],
            "imports/*": ["./src/types/imports/*"]
        }
    },
    "include": [
        "src/types/types.d.ts",
        "src/**/*.ts",
    ],
    "exclude": [
        "src/dummy-types/*",
      ]
}
